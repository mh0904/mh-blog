---
import PostListLayout from "@/components/PostListLayout.astro";
import { getCollection } from "astro:content";

// 在父组件中获取 functions 集合的数据
const posts = (await getCollection("functions", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!-- 传递配置和数据给通用的 PostListLayout 组件 -->
<PostListLayout
  title="函数库"
  description="实用函数集合、代码片段、工具函数 - mh 的功能库"
  posts={posts}
  routePrefix="functions"
  backButton={{
    text: "返回首页",
    href: "/",
  }}
/>
