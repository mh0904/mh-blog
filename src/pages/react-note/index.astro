---
import PostListLayout from "@/components/PostListLayout.astro";
import { getCollection } from "astro:content";

// 获取 blog 集合的数据
const posts = (await getCollection("blog", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PostListLayout
  title="react笔记"
  description="技术分享、开发心得、学习笔记 - mh 的react笔记"
  posts={posts}
  routePrefix="blog"
/>
